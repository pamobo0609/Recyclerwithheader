<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/activity_default_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_default_margin">

    <ImageView
        android:layout_width="@dimen/header_size"
        android:layout_height="@dimen/header_size"
        android:src="@drawable/nav_image"
        android:id="@+id/img_header"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txtv_header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:gravity="center"
        android:text="@string/msg_hello_from_the_recycler_header"/>

</LinearLayout>