<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtv_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultGray"
        android:gravity="center|start"
        android:padding="@dimen/activity_default_margin"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_separator"
        android:layout_marginBottom="@dimen/activity_default_margin"
        android:orientation="horizontal"
        android:padding="@dimen/activity_default_margin">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="@dimen/header_size"
            android:layout_height="@dimen/header_size"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_image" />

        <TextView
            android:id="@+id/txtv_header_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_size"
            android:gravity="center"
            android:text="@string/msg_hello_from_the_recycler_header" />

    </LinearLayout>

</RelativeLayout>