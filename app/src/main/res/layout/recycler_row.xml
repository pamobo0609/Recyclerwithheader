<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:orientation="horizontal"
    android:padding="@dimen/activity_default_margin"
    app:cardElevation="@dimen/card_elevation"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/user_thumb_image" />

        <TextView
            android:id="@+id/txtv_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_default_height"
            android:layout_marginEnd="@dimen/activity_default_margin"
            android:layout_marginLeft="@dimen/activity_default_margin"
            android:layout_marginRight="@dimen/activity_default_margin"
            android:layout_marginStart="@dimen/activity_default_margin"
            android:gravity="center"
            android:text="oisad"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_default_height"
            android:gravity="center"
            android:text="oisad"
            android:textAlignment="center" />
    </LinearLayout>
</android.support.v7.widget.CardView>